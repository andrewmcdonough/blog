<h1>Editing post</h1>

<% form_for(@post) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>


  <p>
    <%= f.label :intro %><br />
    <%= f.text_area :intro, :cols => 60, :rows => 5%>
  </p>

  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, :cols => 60, :rows => 10 %>
  </p>
  <p>
    <%= f.label :publish %><br />
    <%= f.check_box :publish %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @post %> |
<%= link_to 'Back', posts_path %>
